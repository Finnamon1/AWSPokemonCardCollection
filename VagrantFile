Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"

  # Database VM
  config.vm.define "db" do |db|
    db.vm.hostname = "db"
    db.vm.network "private_network", ip: "192.168.56.10"
    db.vm.provision "shell", path: "database/provision.sh"
  end

  # API VM
  config.vm.define "API" do |api|
    api.vm.hostname = "API"
    api.vm.network "private_network", ip: "192.168.56.11"
    api.vm.provision "shell", path: "API/provision.sh"
  end

  # UI VM
  config.vm.define "ui" do |ui|
    ui.vm.box = "ubuntu/focal64"
    ui.vm.hostname = "ui"
    ui.vm.network "private_network", ip: "192.168.56.12"
    ui.vm.network "forwarded_port", guest: 3000, host: 3000

    # First provision: setup Node.js & start app
    ui.vm.provision "shell", path: "UI/provision.sh"

    # open browser on host
    ui.vm.provision "shell", run: "always", path: "UI/open_browser.sh", privileged: false
  end
end
